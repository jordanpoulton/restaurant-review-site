
<h1> Welcome to the Restaurant Review Site </h1>

<p><h2> Current Restaurants:</h2></p>


<table style='border: 2px solid #999' class="table table-striped">
  <thead>
    <th> Restaurant Name </th>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td> <%= link_to restaurant.name, restaurant_path(restaurant) %>
      </td>
      <td><em><%= link_to "Edit", edit_restaurant_path(restaurant) %></em>
      </td>
      <td><em><%= link_to "Delete", restaurant_path(restaurant), :confirm => 'Are you sure?', :method => :delete %></em>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>

<p><%= link_to "Create new Restaurant", new_restaurant_path %></p>

<p> <%= link_to "View Cuisines", cuisines_path %> </p>
